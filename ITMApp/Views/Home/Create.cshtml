@model ITMApp.Models.status
@{
    ViewBag.Title = "Добавить статус";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles{

    <link href="~/Content/themes/ui-lightness/jquery-ui.css" rel="stylesheet" />
    <link href="~/Content/jquery-ui-timepicker-addon.min.css" rel="stylesheet" />
}
@section Scripts {
    <script src="~/Scripts/jquery-ui-1.11.2.min.js"></script>
    <script src="~/Scripts/jquery-ui-timepicker-addon.min.js"></script>
    <script src="~/Scripts/jquery-ui-sliderAccess.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('.chzn-select').chosen({ no_results_text: 'No match found' });
            var $datetimepicker = $(".datefield");
            $datetimepicker.datetimepicker({ timeFormat: "HH:mm:ss", dateFormat: 'dd.mm.yy', });
            $datetimepicker.datetimepicker('setDate', new Date());
        });
    </script>
}

    <div class="panel" style="margin-top: 5%;">
    <div class="panel-heading">
        <h3>Добавить новый статус</h3>
    </div>


    @using (Html.BeginForm("Create", "Home",
        FormMethod.Post))
    {
        <div class="panel-body">
            <div class="form-group">
                <label class="control-label">Выберите коммутатор</label>
                @Html.DropDownList("switchID", ViewBag.Switches as SelectList, new { @class = "chzn-select form-control", data_placeholder = "Select a commutator" })
            </div>
            <div class="form-group">
                <label class="control-label">Выберите дату и время</label>
                @Html.TextBox("datetime", null, new { @class = "datefield form-control", type = "datetime" })
            </div>
            <div class="form-group">
                <label class="control-label">Выберите действие</label>
                @Html.DropDownList("action", ViewBag.PossibleActions as SelectList, new { @class = " form-control", data_placeholder = "Select an action" })
            </div>

        </div>
        <div class="panel-footer">
            <input type="submit" value="Сохранить" class="btn btn-primary" />
            @Html.ActionLink("Отмена", "Index", null, new { @class = "btn btn-default" })
        </div>
    }
</div>



